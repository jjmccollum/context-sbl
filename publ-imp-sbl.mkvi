% Short citations setup
\startsetups btx:sbl:cite:short
  \fastsetup{\s!btx:\s!cite:concat}
  \fastsetup{\s!btx:\s!cite:lefttext}
  \begingroup
  \edef\currentbtxcategory{\btxfield{category}}
  % If this entry has a shorthand, then just cite that
  \btxdoifelse{shorthand} {
    \texdefinition{btx:sbl:cite:shorthand}
  } {
    % Otherwise, start with the last name of the author/editor
    \btxdoif{author} {
      \currentbtxciteauthorbyfield
      \btxcomma
    }
    % Follow this with a shorttitle, if there is one
    \btxdoifelse{shorttitle} {
      \btxstartstyleandcolor[sbl:\s!list:title:\currentbtxcategory]
        \btxusecommand[sbl:\s!list:title:\currentbtxcategory] {
          \btxflush{shorttitle}% set the shorthand according to the current category
        }
      \btxstopstyleandcolor
      \btxcomma
    } {
      % If there isn't a shorttitle, then try using the full title
      \btxdoifelse{title} {
        \texdefinition{btx:sbl:cite:title}
      } {
        % If there isn't any title, then we're in a special category;
        % use the appropriate preamble
        \doif {\currentbtxcategory} {review} {
          \btxlabeltext{sbl:review}
          \btxspace
          \btxlabeltext{sbl:of}
          \btxspace
          \clf_btxdirect{\currentbtxdataset}{\btxflush{bookxref}}{title}
          \btxleftparenthesisorbracket
          \doifelse{\clf_btxfoundname{\currentbtxdataset}{\btxflush{bookxref}}{author}}{editor} {
            \btxlabeltext{sbl:editor}
          } {
            \btxlabeltext{sbl:by}
          }
          \btxspace
          %\textcite[name][\btxflush{bookxref}] would be more succinct, but it doesn't work here
          \clf_btxauthor
            {\currentbtxdataset}%
            {\btxflush{bookxref}}%
            {author}%
            {%
                combiner    {name}%
                kind        {list}%
                etallimit   {\btxparameter\c!etallimit}%
                etaldisplay {\btxparameter\c!etaldisplay}%
                etaloption  {\btxparameter\c!etaloption}%
                symbol      {\btxparameter{\c!stopper:initials}}%
                connector   {\btxparameter{\c!connector:initials}}%
            }%
          \btxrightparenthesisorbracket
          \btxcomma
        }
        \doif {\currentbtxcategory} {suppbook} {
          \btxflush{type}
          \btxcomma
        }
      }
    }
  }
  \endgroup
  \removeunwantedspaces
  \removepunctuation
  \fastsetup{\s!btx:\s!cite:righttext}
\stopsetups

