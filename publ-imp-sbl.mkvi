% List citation setup
\startsetups btx:sbl:\s!cite:entry
  \fastsetup{\s!btx:\s!cite:concat}
  \fastsetup{\s!btx:\s!cite:lefttext}
  \begingroup
  % Reset variables for new citation
  \let\btxroottag\currentbtxtag
  \def\btxprintpubl{yes}
  \let\btxcurrentsubcitetype\empty
  % Add this entry to the list unless it is in a category that should not be cited in the list
  \doifnotinset{\currentbtxcategory}{inlexicon, ancienttext, classictext} {
    \btxcitereference
  }
  % Then cite the list entry
  \btx_entry_inject
  %\btxhandleciteentry
  \endgroup
  \fastsetup{\s!btx:\s!cite:righttext}
\stopsetups

